{
  "name": "circleci-monorepo",
  "private": true,
  "version": "1.0.0",
  "devDependencies": {
    "lerna": "^3.15.0"
  },
  "scripts": {
    "ci:test": "lerna run ci:test",
    "ci:deploy:circleci-node": "lerna run ci:deploy --scope={@codeponder/common,circleci-node}",
    "ci:deploy:circleci-react": "lerna run ci:deploy --scope={@codeponder/common,circleci-react}",
    "heroku-prebuild": "node scripts/remove-workspaces.js",
    "heroku-postbuild": "node scripts/build-workspaces.js"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
