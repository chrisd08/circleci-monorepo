{
  "name": "circleci-monorepo",
  "private": true,
  "version": "1.0.0",
  "devDependencies": {
    "lerna": "^3.13.1"
  },
  "scripts": {
    "build": "lerna run build --scope={circleci-react}",
    "ci:test": "lerna run ci:test",
    "ci:deploy": "lerna run ci:deploy --since $TAG",
    "new-version": "lerna version --conventional-commits --yes"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
